<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <TableLayout
        android:scrollbars="horizontal|vertical"
        android:id="@+id/tabela_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="1">

        <TableRow android:layout_gravity="center" >
            <TextView
                android:id="@+id/texto_nada1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nada" />
        </TableRow>

        <TableRow>
            <ImageView
                android:id="@+id/texto_aleste"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/aleste" />
            <ImageButton
                android:id="@+id/botao_play_aleste"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:src="@drawable/speaker_logo" />
            <ImageButton
                android:id="@+id/botao_use_ringtone_aleste"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:src="@drawable/checkmark" />
         </TableRow>

        <TableRow>
            <ImageView
                android:id="@+id/texto_firehawk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/firehawk" />
            <ImageButton
                android:id="@+id/botao_play_firehawk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:src="@drawable/speaker_logo" />
            <ImageButton
                android:id="@+id/botao_use_ringtone_firehawk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:src="@drawable/checkmark" />
        </TableRow>

        <TableRow>
            <ImageView
                android:id="@+id/texto_fray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fray" />
            <ImageButton
                android:id="@+id/botao_play_fray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:src="@drawable/speaker_logo" />
            <ImageButton
                android:id="@+id/botao_use_ringtone_fray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:src="@drawable/checkmark" />
        </TableRow>

        <TableRow>
            <ImageView
                android:id="@+id/texto_golvellius1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/golvellius" />
            <ImageButton
                android:id="@+id/botao_play_golvellius1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:src="@drawable/speaker_logo" />
            <ImageButton
                android:id="@+id/botao_use_ringtone_golvellius1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:src="@drawable/checkmark" />
        </TableRow>

        <TableRow>
            <ImageView
                android:id="@+id/texto_metalgear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/metalgear1" />
            <ImageButton
                android:id="@+id/botao_play_metalgear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:src="@drawable/speaker_logo" />
            <ImageButton
                android:id="@+id/botao_use_ringtone_metalgear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:src="@drawable/checkmark" />
        </TableRow>
        <TableRow>
            <ImageView
                android:id="@+id/texto_sdsnatcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sdsnatcher" />
            <ImageButton
                android:id="@+id/botao_play_sdsnatcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:src="@drawable/speaker_logo" />
            <ImageButton
                android:id="@+id/botao_use_ringtone_sdsnatcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:src="@drawable/checkmark" />
        </TableRow>

        <TableRow>
            <ImageView
                android:id="@+id/texto_usas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/usas" />
            <ImageButton
                android:id="@+id/botao_play_usas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:src="@drawable/speaker_logo" />
            <ImageButton
                android:id="@+id/botao_use_ringtone_usas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:src="@drawable/checkmark" />
        </TableRow>

  </TableLayout>
	 
</ScrollView>